{
  "manifest_version": 2,

  "name": "IStyleYou Product Plugin",
  "description": "This extension will read a product page content and post it to IStyleYou Catalog",
  "version": "1.22",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "content_scripts": [
		{
			"matches": ["http://www.koovs.com/*"],
			"js" : ["content.js"]
		}
  ],
  "permissions": [
   "activeTab",
   "tabs",
   "tabCapture",
	 "http://*/*"
   ]
}
